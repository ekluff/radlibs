<h1>welcome to radLibs</h1>
<h4>the raddest of the libs</h4>

<% if @stories.any? %>
<h3>latest radLibs</h3>
  <ul class="list list-unstyled">
    <% @stories.each do |story| %>
      <li>
        <%= link_to story.title, story_path(story) %>
      </li>
    <% end %>
  </ul>
<% end %>

<% if user_signed_in? %>

<%= form_for @story, html: { multipart: true } do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.file_field :asset %>
<%= f.submit %>
<% end %>

<% end %>
